 server {
  listen 80;
  listen [::]:80;

  server_name {{ thehive_url }};

  access_log            /var/log/nginx/thehive_access.log;

  client_max_body_size              2G;
  client_header_buffer_size         8k;

{% if thehive_auth_vouch['enabled'] %}
  auth_request /validate;

  location = /validate {
    proxy_pass {{ thehive_auth_vouch['url']}}/validate;
    proxy_pass_request_body         off;
    proxy_set_header                Content-Length "";

    auth_request_set                $auth_resp_x_vouch_user $upstream_http_x_vouch_user;
    auth_request_set                $auth_resp_jwt $upstream_http_x_vouch_jwt;
    auth_request_set                $auth_resp_err $upstream_http_x_vouch_err;
    auth_request_set                $auth_resp_failcount $upstream_http_x_vouch_failcount;
  }

  error_page 401 = @error401;

  location @error401 {
      return 302 {{ thehive_auth_vouch['url']}}/login?url=$scheme://$http_host$request_uri&vouch-failcount=$auth_resp_failcount&X-Vouch-Token=$auth_resp_jwt&error=$auth_resp_err;
  }
{% endif %}

  location / {

    proxy_pass                        http://localhost:{{ thehive_http_port }}/;

    proxy_set_header                  Host $host;
    proxy_set_header                  X-Real-IP $remote_addr;
    proxy_set_header                  X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header                  X-Forwarded-Proto $scheme;

    proxy_connect_timeout             600;
    proxy_send_timeout                600;
    proxy_read_timeout                600;
    send_timeout                      600;
    proxy_buffering                   off;

    proxy_http_version                1.1;

{% if thehive_auth_vouch['enabled'] %}
    auth_request_set                  $auth_resp_x_vouch_user $upstream_http_x_vouch_user;
    auth_request_set                  $auth_resp_jwt $upstream_http_x_vouch_jwt;
    proxy_set_header                  {{ thehive_auth_vouch['logon_header'] }} $auth_resp_x_vouch_user;
    add_header                        X-Logged-In-User $auth_resp_x_vouch_user;

{% endif %}
  }

{% for i in thehive_nginx_includes %}
  include {{ i }}
{% endfor %}
{% if thehive_nginx_ssl['enabled'] %}
  return 301 https://$host$request_uri;
{% endif %}
}

